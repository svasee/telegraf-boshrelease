[global_tags]
  bosh-job = "<%= name %>"
  bosh-deployment = "<%= spec.deployment %>"
<% p("global_tags").each do |k, v| %>
  <%= k %> = "<%= v %>"
<% end %>

[[outputs.influxdb]]
  database = "<%= p("influxdb.database") %>"
  username = "<%= p("influxdb.username") %>"
  password = "<%= p("influxdb.password") %>"
  insecure_skip_verify = <%= p("influxdb.insecure_skip_verify") %>

[[inputs.cpu]]

[[inputs.disk]]
  ignore_fs = ["tmpfs", "devtmpfs", "devfs"]

[[inputs.diskio]]

[[inputs.kernel]]

[[inputs.mem]]

[[inputs.procstat]]
  pattern = "(consul|vault)"

[[inputs.processes]]

[[inputs.swap]]

[[inputs.system]]

[[inputs.net]]

[[inputs.statsd]]
  protocol = "udp"
  service_address = ":8125"
  delete_gauges = true
  delete_counters = true
  delete_sets = true
  delete_timings = true
  percentiles = [90]
  metric_separator = "."
  parse_data_dog_tags = true
  allowed_pending_messages = 10000
  percentile_limit = 1000
